# ========================================
# TECNOCURSOS AI - CONFIGURAÇÕES DE AMBIENTE
# ========================================

# Configurações do Servidor
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
SERVER_RELOAD=true
SERVER_LOG_LEVEL=info

# Configurações de Segurança
SECRET_KEY=tecnocursos-ai-super-secret-key-2025-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
BCRYPT_ROUNDS=12

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///./tecnocursos.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Configurações de Redis/Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=true

# Configurações de Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@tecnocursos.com
SMTP_PASSWORD=your-email-password-here
EMAIL_FROM=noreply@tecnocursos.com
EMAIL_TEMPLATES_DIR=./templates/email

# Configurações de Armazenamento
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=pdf,docx,txt,mp4,mp3,jpg,png,gif

# Configurações de IA/OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Configurações de Video/Avatar
AVATAR_API_URL=https://api.d-id.com
AVATAR_API_KEY=your-avatar-api-key-here
VIDEO_OUTPUT_DIR=./videos
VIDEO_TEMP_DIR=./temp

# Configurações de TTS
TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
TTS_VOICE_ID=default
TTS_OUTPUT_DIR=./audio

# Configurações de Monitoramento
SENTRY_DSN=https://your-sentry-dsn-here
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Configurações de Desenvolvimento
DEBUG=true
TESTING=false
ENVIRONMENT=development

# Configurações de CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://tecnocursos.com
CORS_ALLOW_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION=30

# Configurações de CDN
CDN_URL=https://cdn.tecnocursos.com
CDN_ENABLED=false

# Configurações de WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000

# Configurações de Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXX-X
