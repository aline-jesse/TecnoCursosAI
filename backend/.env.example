# TecnoCursos AI - Configuração de Ambiente
# Copie este arquivo para .env e ajuste os valores

# ========== APLICAÇÃO ==========
APP_NAME=TecnoCursos AI
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, staging, production, testing
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ========== SEGURANÇA ==========
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== BANCO DE DADOS ==========
DATABASE_URL=sqlite:///./tecnocursos.db
# Para PostgreSQL: postgresql://user:password@localhost/tecnocursos
# Para MySQL: mysql://user:password@localhost/tecnocursos
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ========== REDIS (CACHE) ==========
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5

# ========== RATE LIMITING ==========
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ========== CORS ==========
# Development
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]
# Production (uncomment and modify)
# ALLOWED_ORIGINS=["https://tecnocursos.ai","https://www.tecnocursos.ai"]

# ========== ARQUIVOS ==========
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB em bytes
TEMP_DIR=./temp
VIDEO_OUTPUT_DIR=./videos
AUDIO_OUTPUT_DIR=./audios
CLEANUP_TEMP_FILES=true
TEMP_FILE_TTL_HOURS=24

# ========== INTELIGÊNCIA ARTIFICIAL ==========
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Modelos padrão
DEFAULT_TEXT_MODEL=gpt-3.5-turbo
DEFAULT_VOICE_MODEL=eleven_multilingual_v2
DEFAULT_IMAGE_MODEL=dall-e-3

# Configurações de geração
MAX_TOKENS=2000
TEMPERATURE=0.7
VOICE_STABILITY=0.5
VOICE_SIMILARITY=0.8

# ========== LOGGING ==========
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=tecnocursos.log
LOG_ROTATION=1 day
LOG_RETENTION=7
ENABLE_JSON_LOGS=false

# ========== MONITORAMENTO ==========
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PROFILING=false
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health

# ========== NOTIFICAÇÕES ==========
# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@tecnocursos.ai

# Slack (opcional)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ========== PRODUÇÃO ==========
# Sentry para monitoramento de erros
SENTRY_DSN=your-sentry-dsn

# New Relic para APM
NEW_RELIC_LICENSE_KEY=your-newrelic-key
NEW_RELIC_APP_NAME=TecnoCursos AI

# ========== VALIDAÇÃO DE SENHAS ==========
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# ========== CONFIGURAÇÕES POR AMBIENTE ==========

# DEVELOPMENT
# - DEBUG=true
# - LOG_LEVEL=DEBUG
# - CORS permite localhost
# - Documentação ativa

# STAGING  
# - DEBUG=false
# - LOG_LEVEL=INFO
# - CORS restrito ao domínio de staging
# - Documentação ativa

# PRODUCTION
# - DEBUG=false
# - LOG_LEVEL=WARNING
# - CORS restrito aos domínios de produção
# - Documentação desabilitada
# - Requer todas as chaves de API
# - HTTPS obrigatório

# TESTING
# - DEBUG=true
# - LOG_LEVEL=DEBUG
# - Banco de dados de teste
# - Cache em memória
